<?xml version="1.0" encoding="iso-8859-1"?>
<deltaresTestbench_v3 xmlns="http://schemas.deltares.nl/deltaresTestbench_v3"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xi="http://www.w3.org/2001/XInclude"
         xsi:schemaLocation="http://schemas.deltares.nl/deltaresTestbench_v3 http://content.oss.deltares.nl/schemas/deltaresTestbench_v3-2.00.xsd">
    <!--
    Basic Linux configuration file
    -->
    <config>
        <localPaths>
            <testCasesDir>./data/cases</testCasesDir>
            <enginesDir>./data/engines</enginesDir>
            <referenceDir>./data/reference_results</referenceDir>
        </localPaths>
        <locations>
			<location name="reference_results">
                <credential ref="commandline"/>
                <root>https://repos.deltares.nl/repos/DSCTestbench/trunk/references</root>
            </location>
			<location name="cases">
                <credential ref="commandline"/>
                <root>https://repos.deltares.nl/repos/DSCTestbench/trunk/cases</root>
            </location>
			<location name="reference_engines">
                <credential ref="commandline"/>
                <root>https://repos.deltares.nl/repos/DSCTestbench/trunk/references/bin</root>
            </location>
            <location name="engines_to_compare">
                <credential ref="commandline"/>
                <root>https://repos.deltares.nl/repos/DSCTestbench/trunk/references</root>
            </location>
            <location name="local">
                <root>./data/engines</root>
            </location>
        </locations>
    </config>
    <!--
    Programs
    -->
    <programs>
        <!--
        The order is important. Start with the following programs:
            command_prompt
            svn
            mpi
        -->
        <program name="command_prompt">
            <path>/bin/bash</path>
            <arguments>
                <argument>-c</argument>
            </arguments>
        </program>
        <program name="svn">
            <path>svn</path>
			<environments>
                <environment name="LD_LIBRARY_PATH" type="path">/opt/subversion/lib</environment>
            </environments>
        </program>
        <program name="mpi" shellStringRemoveQuotes="true" addSearchPaths="true" excludeSearchPathsContaining="share/delft3d/esmf">
            <!-- <path>/opt/intel/parallel_studio_cluster_2016_up3/compilers_and_libraries_2016.3.210/linux/mpi/intel64/bin/mpiexec</path> -->
            <path>mpiexec</path>
            <arguments>
                <argument>-n 3 </argument>
            </arguments>
        </program>
        <program name="mpi2" shellStringRemoveQuotes="true" addSearchPaths="true" excludeSearchPathsContaining="share/delft3d/esmf">
            <path>mpiexec</path>
            <arguments>
                <argument>-n 2 </argument>
            </arguments>
        </program>
        <program name="mpi4" shellStringRemoveQuotes="true" addSearchPaths="true" excludeSearchPathsContaining="share/delft3d/esmf">
            <path>mpiexec</path>
            <arguments>
                <argument>-n 4 </argument>
            </arguments>
        </program>
        <program name="dimr" logOutputToFile="true" programStringRemoveQuotes="true">
            <location ref="reference_engines" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="local" type="check">
                <from>teamcity_artifacts/lnx64</from> <!-- just the first part of the directory structure, wil be file by TeamCity -->
            </location>
            <path>bin/run_dimr.sh</path>
            <shell ref="mpi"/>
        </program>
        <program name="dflowfm" logOutputToFile="true" programStringRemoveQuotes="true">
            <location ref="reference_engines" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="local" type="check">
                <from>teamcity_artifacts/lnx64</from> <!-- just the first part of the directory structure, wil be file by TeamCity -->
            </location>
            <path>bin/run_dflowfm.sh</path>
            <shell ref="mpi"/>
            <environments>
                <environment name="OMP_NUM_THREADS" type="raw">1</environment>
            </environments>
        </program>
        <program name="dimr2" ignoreReturnValue="true" logOutputToFile="true" programStringRemoveQuotes="true">
            <location ref="reference_engines" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="local" type="check">
                <from>teamcity_artifacts/lnx64</from> <!-- just the first part of the directory structure, wil be file by TeamCity -->
            </location>
            <path>bin/run_dimr.sh</path>
            <shell ref="mpi2"/>
        </program>
        <program name="dflowfm2" ignoreReturnValue="true" logOutputToFile="true" programStringRemoveQuotes="true">
            <location ref="reference_engines" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="local" type="check">
                <from>teamcity_artifacts/lnx64</from> <!-- just the first part of the directory structure, wil be file by TeamCity -->
            </location>
            <path>bin/run_dflowfm.sh</path>
            <shell ref="mpi2"/>
            <environments>
                <environment name="OMP_NUM_THREADS" type="raw">1</environment>
            </environments>
        </program>
        <program name="dimr4" ignoreReturnValue="true" logOutputToFile="true" programStringRemoveQuotes="true">
            <location ref="reference_engines" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="local" type="check">
                <from>teamcity_artifacts/lnx64</from> <!-- just the first part of the directory structure, wil be file by TeamCity -->
            </location>
            <path>bin/run_dimr.sh</path>
            <shell ref="mpi4"/>
        </program>
        <program name="dfmoutput" logOutputToFile="true" programStringRemoveQuotes="true" addSearchPaths="true" excludeSearchPathsContaining="share/delft3d/esmf">
            <location ref="reference_engines" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="local" type="check">
                <from>teamcity_artifacts/lnx64</from> <!-- just the first part of the directory structure, will be filled by TeamCity -->
            </location>
            <path>bin/dfmoutput</path>
            <shell ref="command_prompt"/>
        </program>
        <program name="dflowfm" logOutputToFile="true" programStringRemoveQuotes="true">
            <location ref="reference_engines" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="local" type="check">
                <from>teamcity_artifacts/lnx64</from> <!-- just the first part of the directory structure, will be filled by TeamCity -->
            </location>
            <path>bin/run_dflowfm.sh</path>
            <shell ref="command_prompt"/>
        </program>
    </programs>
    <!--
    default testCases
    -->
    <defaultTestCases>
        <testCase name="dimr_trunk">
            <programs>
                <program ref="dimr">
                    <arguments>
                        <argument>-c 3 -m dimr.xml</argument>
                    </arguments>
                </program>
            </programs>
            <location ref="reference_results" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="cases" type="input">
                <from>.</from>
            </location>
            <maxRunTime>60.0</maxRunTime> <!-- seconds -->
        </testCase>
        <testCase name="dimr_trunk_2">
            <programs>
                <program ref="dimr2">
                    <arguments>
                        <argument>-c 2 -m dimr.xml</argument>
                    </arguments>
                </program>
            </programs>
            <location ref="reference_results" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="cases" type="input">
                <from>.</from>
            </location>
            <maxRunTime>60.0</maxRunTime> <!-- seconds -->
        </testCase>
        <testCase name="dimr_trunk_4">
            <programs>
                <program ref="dimr4">
                    <arguments>
                        <argument>-c 4 -m dimr.xml</argument>
                    </arguments>
                </program>
            </programs>
            <location ref="reference_results" type="reference">
                <from>lnx64</from>
            </location>
            <location ref="cases" type="input">
                <from>.</from>
            </location>
            <maxRunTime>60.0</maxRunTime> <!-- seconds -->
        </testCase>
        <testCase name="postproc">
            <programs>
                <program ref="dfmoutput">
                </program>
            </programs>
            <location ref="reference_results" type="reference">
                <from>win64</from>
            </location>
            <location ref="cases" type="input">
                <from>.</from>
            </location>
            <maxRunTime>60.0</maxRunTime> <!-- seconds -->
        </testCase>
    </defaultTestCases>

  <xi:include href="../include/dimr_dflowfm_1D_parallel.xml"/>
  <xi:include href="../include/dimr_dflowfm_1D_mapmerge.xml"/>

</deltaresTestbench_v3>
