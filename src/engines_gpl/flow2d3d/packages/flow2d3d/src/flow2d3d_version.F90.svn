subroutine getfullversionstring_flow2d3d(stringout)
   character(*), intent(out) :: stringout
   integer                   :: length

   character(*), parameter :: flow2d3d_major        = 'VN_MAJOR'
   character(*), parameter :: flow2d3d_minor        = 'VN_MINOR'
   character(*), parameter :: flow2d3d_revision     = 'VN_REVISION'
   character(*), parameter :: flow2d3d_build_number = 'VN_BUILD_NUMBER'

   character(*), parameter :: flow2d3d_company      = 'Deltares'
   character(*), parameter :: flow2d3d_company_url  = 'http://www.deltares.nl'
   character(*), parameter :: flow2d3d_program      = 'Delft3D-FLOW'

   character(*), parameter :: flow2d3d_version      = flow2d3d_major//'.'//flow2d3d_minor//'.'//flow2d3d_revision//'.'//flow2d3d_build_number
   character(*), parameter :: flow2d3d_version_full = 'Deltares, '//flow2d3d_program//' Version '//flow2d3d_version//', '//__DATE__//', '//__TIME__
   character(*), parameter :: flow2d3d_version_id   = '@(#)'//flow2d3d_version_full



   !
   ! body
   length    = min(len_trim(flow2d3d_version_full),len(stringout))
   stringout = flow2d3d_version_id(5:5+length-1)
end subroutine getfullversionstring_flow2d3d
