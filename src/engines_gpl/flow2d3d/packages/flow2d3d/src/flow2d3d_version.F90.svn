subroutine getshortversionstring_flow2d3d(stringout)
   character(*), intent(out) :: stringout
   integer                   :: length

   character(*), parameter :: flow2d3d_major         = 'VN_MAJOR'
   character(*), parameter :: flow2d3d_minor         = 'VN_MINOR'

   character(*), parameter :: flow2d3d_short_version = flow2d3d_major//'.'//flow2d3d_minor
   !
   ! body
   length    = min(len_trim(flow2d3d_short_version),len(stringout))
   stringout = flow2d3d_short_version(1:length)
end subroutine getshortversionstring_flow2d3d
